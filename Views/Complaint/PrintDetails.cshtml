@model dynamic
@{
    Layout = null;
    var statusClass = Model.Status == "Pending" ? "warning" :
                    Model.Status == "In Progress" ? "info" :
                    Model.Status == "Resolved" ? "success" : 
                    Model.Status == "Rejected" ? "danger" : "secondary";
    var priorityClass = Model.Priority == "High" ? "danger" :
                      Model.Priority == "Medium" ? "warning" : "info";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Complaint Details - Print View</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <style>
        @@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');
        
        body {
            background: white;
            color: #1a1a1a;
            font-family: 'Inter', 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            font-size: 13px;
            line-height: 1.5;
            padding: 40px;
        }

        /* Reset & Print Specifics */
        @@media print {
            body { 
                padding: 0; 
                margin: 0; 
            }
            .no-print { display: none !important; }
            .container { 
                width: 100% !important; 
                max-width: 100% !important; 
                padding: 0 !important;
            }
            .section-box {
                break-inside: avoid;
            }
        }

        /* Layout Utilities */
        .header-section {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            border-bottom: 2px solid #000;
            padding-bottom: 20px;
            margin-bottom: 30px;
        }

        .report-title {
            font-size: 24px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin: 0;
            color: #000;
        }

        .report-meta {
            text-align: right;
            font-size: 11px;
            color: #555;
        }

        .complaint-title {
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 20px;
            color: #111;
        }

        .grid-container {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 30px;
            margin-bottom: 30px;
        }

        .info-group {
            margin-bottom: 12px;
        }

        .label {
            font-size: 10px;
            text-transform: uppercase;
            color: #666;
            font-weight: 600;
            letter-spacing: 0.5px;
            display: block;
            margin-bottom: 2px;
        }

        .value {
            font-size: 14px;
            font-weight: 500;
            color: #000;
        }

        .status-badge {
            display: inline-block;
            padding: 2px 8px;
            border: 1px solid #000;
            border-radius: 4px;
            font-size: 12px;
            font-weight: 600;
            text-transform: uppercase;
        }

        .section-header {
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
            margin-bottom: 15px;
            margin-top: 30px;
            color: #333;
        }

        .description-box {
            background-color: #f8f9fa;
            border: 1px solid #eee;
            padding: 15px;
            border-radius: 4px;
            text-align: justify;
            white-space: pre-wrap;
        }
        
        /* Force background print */
        @@media print {
            .description-box {
                -webkit-print-color-adjust: exact;
                print-color-adjust: exact;
            }
        }

        .timeline-item {
            position: relative;
            padding-left: 20px;
            padding-bottom: 15px;
            border-left: 1px solid #ccc;
        }

        .timeline-item:last-child {
            border-left: 1px solid transparent;
        }

        .timeline-dot {
            position: absolute;
            left: -4px;
            top: 4px;
            width: 7px;
            height: 7px;
            background: #000;
            border-radius: 50%;
        }

        .attachment-list {
            list-style: none;
            padding: 0;
            margin: 0;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 10px;
        }

        .attachment-item {
            border: 1px solid #eee;
            padding: 8px 12px;
            border-radius: 4px;
            font-size: 12px;
            display: flex;
            align-items: center;
        }

        .footer {
            margin-top: 50px;
            text-align: center;
            font-size: 10px;
            color: #999;
            border-top: 1px solid #eee;
            padding-top: 10px;
        }
    </style>
</head>
<body onload="window.print()">

    <div class="header-section">
        <div>
            <h1 class="report-title">Complaint Report</h1>
            <div class="mt-2 text-muted fw-bold">SysAdmin Dept.</div>
        </div>
        <div class="report-meta">
            <div><strong>Report Generated:</strong> @DateTime.Now.ToString("dd MMM yyyy, HH:mm")</div>
            <div style="font-size: 14px; margin-top: 5px; color: #000;">NO: <strong>#@Model.ComplaintId</strong></div>
        </div>
    </div>

    <div>
        <h2 class="complaint-title">@Model.Title</h2>
        
        <div class="grid-container">
            <!-- Column 1 -->
            <div>
                <div class="info-group">
                    <span class="label">Current Status</span>
                    <span class="status-badge">@Model.Status</span>
                </div>
                <div class="info-group">
                    <span class="label">Priority Level</span>
                    <span class="value">@Model.Priority</span>
                </div>
                <div class="info-group">
                    <span class="label">Category</span>
                    <span class="value">@Model.CategoryName</span>
                </div>
                <div class="info-group">
                    <span class="label">Location</span>
                    <span class="value">@Model.Location</span>
                </div>
            </div>

            <!-- Column 2 -->
            <div>
                <div class="info-group">
                    <span class="label">Submitted By</span>
                    @if (Model.CitizenName == "Protected")
                    {
                         <span class="value"><i class="bi bi-shield-lock me-1"></i>Protected Identity</span>
                    }
                    else
                    {
                        <span class="value">@Model.CitizenName</span>
                    }
                </div>
                <div class="info-group">
                    <span class="label">Submission Date</span>
                    <span class="value">@((Model.SubmittedAt is DateTime sdt) ? sdt.ToString("dd MMM yyyy, HH:mm") : "-")</span>
                </div>
                <div class="info-group">
                    <span class="label">Assigned Staff</span>
                    <span class="value">@(Model.StaffName == "Unassigned" ? "Not Assigned" : Model.StaffName)</span>
                </div>
            </div>
        </div>

        <!-- Description Section -->
        <div class="section-box">
            <div class="section-header">Description of Issue</div>
            <div class="description-box">@Model.Description</div>
        </div>

        <!-- Attachments Section -->
        @if (Model.Attachments != null && System.Linq.Enumerable.Any((IEnumerable<dynamic>)Model.Attachments))
        {
            <div class="section-box">
                <div class="section-header">Attachments Reference</div>
                <ul class="attachment-list">
                    @foreach (var attachment in Model.Attachments)
                    {
                        if (attachment == null) continue;
                        <li class="attachment-item">
                            <i class="bi bi-paperclip me-2" style="font-size: 14px;"></i>
                            <span style="font-weight: 500;">@System.IO.Path.GetFileName(attachment.FilePath)</span>
                            <span style="margin-left:auto; color: #777;">@attachment.FileType</span>
                        </li>
                    }
                </ul>
            </div>
        }

        <!-- Digital Trail / History -->
        @if (Model.History != null && System.Linq.Enumerable.Any((IEnumerable<dynamic>)Model.History))
        {
            <div class="section-box" style="break-inside: avoid;">
                <div class="section-header">Processing History</div>
                <div class="mt-3">
                    @foreach (var history in Model.History)
                    {
                        if (history == null) continue;
                        <div class="timeline-item">
                            <div class="timeline-dot"></div>
                            <div style="font-size: 12px; margin-bottom: 2px;">
                                <strong>@history.StatusBefore &rarr; @history.StatusAfter</strong>
                                <span style="color: #666; margin-left: 10px;">@((history.ChangeTime is DateTime hdt) ? hdt.ToString("dd MMM yyyy HH:mm") : "")</span>
                            </div>
                            @if (!string.IsNullOrEmpty(history.Notes))
                            {
                                <div style="font-size: 11px; color: #555; font-style: italic;">@history.Notes</div>
                            }
                        </div>
                    }
                </div>
            </div>
        }

        <div class="footer">
            Complaint Management System &bull; Generated Report &bull; Page 1 of 1
        </div>
    </div>
</body>
</html>
